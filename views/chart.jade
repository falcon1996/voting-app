        canvas#doughnutChart(height='400', width='400')
        
        script(src='https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.6.0/Chart.bundle.min.js')
        
        script.
            var ctx = document.getElementById("doughnutChart").getContext('2d');
            
            var data = {
                
                labels : ["#{votes.option1}", "#{votes.option2}", "#{votes.option3}", "#{votes.option4}", "#{votes.option5}"],
                
                datasets : [{data : [#{votes.vote1}, #{votes.vote2}, #{votes.vote3}, #{votes.vote4}, #{votes.vote5}],
                backgroundColor : ["#FF6384", "#63FF84", "#FFFF00", "#8463FF", "#6384FF"],
                }]
                
            };
            
            var options = {
                
                responsiveAnimationDuration : 5000,
                rotation : -0.5 * Math.PI,
                responsive: false,
                
                animation :{
                    animateRotate : true,
                    animateScale : false
                }
            }
            
            
            
            var myDoughnutChart = new Chart(ctx, {
            type: 'doughnut',
            data: data,
            options : options
            });
            
        
        